<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.accuragroup.eg.VirAdmin.activities.PaymentScreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/lay_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/tv_paymentMethodIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_current_plan"
                android:layout_marginBottom="10dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_Standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standard"
                android:textColor="#2196F3"
                android:layout_marginBottom="15dp"
                android:textSize="40dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_Expiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expiration"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_EpirationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05 - 04 - 2018"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_renew_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_renew"
                android:text="@string/renew"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                />

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />


        <RelativeLayout

            android:id="@+id/footer"

            android:layout_width="match_parent"

            android:layout_height="150dp"

            android:layout_alignParentBottom="true"

            android:background="#FEF1AA"

            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                >
                <TextView
                    android:id="@+id/tv_paymentDoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17dp"
                    android:text="@string/thanks_for_your_trust_in_vir_your_renewal_in_pending_until_you_complete_payment_precess_through_your_payment_method_and_vir_admin_will_confirm_it"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_method"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"

                        />

                    <ImageView
                        android:id="@+id/iv_paymentIcon"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />

                </LinearLayout>




            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>






</LinearLayout>
